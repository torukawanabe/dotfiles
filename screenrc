#---------------------------------------------------------------------------
# General
#---------------------------------------------------------------------------
escape ^Aa

startup_message off
vbell           off
msgminwait      0
autodetach      on
defscrollback   1000
bell_msg        "^G"


#---------------------------------------------------------------------------
# Encode
#---------------------------------------------------------------------------
defkanji    utf-8
defencoding utf-8
encoding    utf-8 utf-8


#---------------------------------------------------------------------------
# Caption
#---------------------------------------------------------------------------
caption always "%{= wk} %-w%{=bu dr}%n %t%{-}%+w"


#---------------------------------------------------------------------------
# Key bind
#---------------------------------------------------------------------------
bind n screen
bind h prev
bind j next
bind l windowlist
bind x remove
bind s split
bind a title
bind k kill
bind v split -v


#---------------------------------------------------------------------------
# 256 color
#---------------------------------------------------------------------------
attrcolor b ".I"
termcapinfo xterm 'Co#256:AB=\E[48;5;%dm:AF=\E[38;5;%dm'
defbce on
